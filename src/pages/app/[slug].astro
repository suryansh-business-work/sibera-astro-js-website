---
import Page from "../../layouts/Page.astro";
import ThemeWrapper from "../../components/ThemeWrapper.astro";
import { allApps } from "../../data/apps-data";

export const prerender = true;

export async function getStaticPaths() {
  return allApps.map((app) => ({
    params: { slug: app.appSlug || app.appName.toLowerCase().replace(/\s+/g, '-') },
    props: { app },
  }));
}

const { app } = Astro.props;
---

<Page
  title={`${app.appName} | Sibera`}
  description={app.appDescription}
>
  <ThemeWrapper category={app.appCategory}>
    <main class="max-w-4xl mx-auto py-16 px-4">
      <div class="text-center mb-12">
        <div class="inline-block p-4 rounded-full bg-white/50 backdrop-blur-sm shadow-lg mb-6">
            <!-- Placeholder for logo if actual svg is not available or needs path adjustment -->
            <img src={`/icons/${app.appLogo}`} alt={`${app.appName} Logo`} class="h-16 w-16 object-contain" onerror="this.onerror=null; this.src='https://placehold.co/64x64?text=Logo'"/>
        </div>
        <h1 class="text-4xl md:text-6xl font-bold text-gray-900 mb-4">
          {app.appName}
        </h1>
        <p class="text-xl text-gray-700 max-w-2xl mx-auto">
          {app.appDescription}
        </p>
        <div class="mt-4 inline-block px-4 py-1 rounded-full bg-blue-100 text-blue-800 text-sm font-semibold">
            {app.appCategory}
        </div>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-16">
        <div class="bg-white/60 backdrop-blur-md rounded-2xl p-8 shadow-sm">
          <h2 class="text-2xl font-bold mb-4">Key Features</h2>
          <ul class="space-y-3">
            <li class="flex items-start">
              <i class="fa-solid fa-check text-green-500 mt-1 mr-3"></i>
              <span>Seamless Integration with Sibera Ecosystem</span>
            </li>
            <li class="flex items-start">
              <i class="fa-solid fa-check text-green-500 mt-1 mr-3"></i>
              <span>Advanced Analytics and Reporting</span>
            </li>
            <li class="flex items-start">
              <i class="fa-solid fa-check text-green-500 mt-1 mr-3"></i>
              <span>Secure and Scalable Infrastructure</span>
            </li>
             <li class="flex items-start">
              <i class="fa-solid fa-check text-green-500 mt-1 mr-3"></i>
              <span>24/7 Dedicated Support</span>
            </li>
          </ul>
        </div>
        <div class="bg-white/60 backdrop-blur-md rounded-2xl p-8 shadow-sm flex flex-col justify-center items-center text-center">
            <h2 class="text-2xl font-bold mb-4">Get Started Today</h2>
            <p class="mb-6 text-gray-600">Experience the power of {app.appName} for your business.</p>
            <a href="/signup" class="inline-block px-8 py-3 rounded-xl bg-blue-600 text-white font-semibold shadow hover:bg-blue-700 transition w-full md:w-auto">
                Start Free Trial
            </a>
             <p class="mt-4 text-sm text-gray-500">No credit card required.</p>
        </div>
      </div>
    </main>
  </ThemeWrapper>
</Page>
