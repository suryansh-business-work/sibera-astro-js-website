---
import { menuData } from "./data/menu-data";
import { getAppsByCategory } from "../../data/apps-data";
import { appConfig } from "../../config/app-config";

const appsByCategory = getAppsByCategory();
const categories = Object.keys(appsByCategory);

// Get the current pathname for active link detection
const currentPath = Astro.url.pathname;
---

<div>
  <div id="mobile-menu" class="lg:hidden fixed inset-0 z-[200] hidden">
    <!-- Backdrop -->
    <div
      id="mobile-menu-backdrop"
      class="absolute inset-0 bg-black/40 backdrop-blur-sm"
    >
    </div>
    <div
      class="fixed inset-y-0 right-0 z-50 w-full overflow-y-auto bg-white sm:max-w-sm shadow-2xl"
    >
      <!-- Header -->
      <div
        class="flex items-center justify-between p-6 border-b border-gray-200"
      >
        <a href="/" class="flex items-center gap-3">
          <span class="sr-only">Sibera</span>
          <img
            src="https://ik.imagekit.io/esdata1/sibera/logo/logo-only.svg"
            alt="Sibera Logo"
            class="h-10 w-auto"
          />
          <div class="flex flex-col justify-center">
            <span class="text-xl font-bold text-gray-900 leading-none"
              >Sibera</span
            >
            <span
              class="text-[10px] font-semibold text-gray-500 leading-none uppercase tracking-widest mt-0.5"
              >by Exyconn</span
            >
          </div>
        </a>
        <button
          id="mobile-menu-close"
          type="button"
          class="-m-2.5 rounded-md p-2.5 text-gray-700 hover:bg-gray-100 transition-colors"
          aria-label="Close menu"
        >
          <span class="sr-only">Close menu</span>
          <svg
            class="h-6 w-6"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width="2"
            stroke="currentColor"
            aria-hidden="true"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M6 18 18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>

      <!-- Menu Content -->
      <div class="p-6">
        <div class="space-y-2">
          {
            menuData.map((item, idx) => {
              if (item.name === "Products") {
                return (
                  <div>
                    <button
                      type="button"
                      class="flex w-full items-center justify-between rounded-lg px-4 py-3 text-base font-semibold text-gray-900 hover:bg-gray-100 transition-colors"
                      aria-controls="mobile-products-submenu"
                      aria-expanded="false"
                      id="mobile-products-toggle"
                    >
                      <span>{item.name}</span>
                      <svg
                        class="h-5 w-5 transition-transform duration-200"
                        viewBox="0 0 20 20"
                        fill="currentColor"
                        aria-hidden="true"
                      >
                        <path
                          fill-rule="evenodd"
                          d="M5.22 8.22a.75.75 0 0 1 1.06 0L10 11.94l3.72-3.72a.75.75 0 1 1 1.06 1.06l-4.25 4.25a.75.75 0 0 1-1.06 0L5.22 9.28a.75.75 0 0 1 0-1.06Z"
                          clip-rule="evenodd"
                        />
                      </svg>
                    </button>
                    <div
                      class="mt-2 space-y-2 hidden pl-4"
                      id="mobile-products-submenu"
                    >
                      {categories.map((category, catIdx) => (
                        <div class="border-l-2 border-gray-200 pl-3">
                          <button
                            type="button"
                            class="flex w-full items-center justify-between rounded-lg px-3 py-2 text-sm font-semibold text-gray-700 hover:bg-gray-100 transition-colors"
                            aria-controls={`mobile-category-${catIdx}`}
                            aria-expanded="false"
                            data-category-toggle={catIdx}
                          >
                            <span>{category}</span>
                            <svg
                              class="h-4 w-4 text-gray-400 transition-transform duration-200"
                              viewBox="0 0 20 20"
                              fill="currentColor"
                            >
                              <path
                                fill-rule="evenodd"
                                d="M5.23 7.21a.75.75 0 011.06.02L10 11.168l3.71-3.938a.75.75 0 111.08 1.04l-4.25 4.5a.75.75 0 01-1.08 0l-4.25-4.5a.75.75 0 01.02-1.06z"
                                clip-rule="evenodd"
                              />
                            </svg>
                          </button>
                          <div
                            class="mt-1 space-y-1 hidden pl-2"
                            id={`mobile-category-${catIdx}`}
                          >
                            {appsByCategory[category].map((app) => {
                              const appHref = `/app/${app.appSlug || app.appName.toLowerCase().replace(/\s+/g, "-")}`;
                              const isActive = currentPath === appHref;
                              return (
                                <a
                                  href={appHref}
                                  class={`block rounded-lg px-3 py-2 text-sm transition-colors ${
                                    isActive
                                      ? "text-blue-600 bg-blue-50 font-bold"
                                      : "text-gray-600 hover:text-blue-600 hover:bg-blue-50"
                                  }`}
                                >
                                  {app.appName}
                                </a>
                              );
                            })}
                          </div>
                        </div>
                      ))}
                    </div>
                  </div>
                );
              }

              return item.children ? (
                <div>
                  <button
                    type="button"
                    class="flex w-full items-center justify-between rounded-lg px-4 py-3 text-base font-semibold text-gray-900 hover:bg-gray-100 transition-colors"
                    aria-controls={`submenu-${idx}`}
                    aria-expanded="false"
                    data-submenu-toggle={idx}
                  >
                    <span>
                      {item.icon && <i class={item.icon + " mr-2"} />}
                      {item.name}
                    </span>
                    <svg
                      class="h-5 w-5 transition-transform duration-200"
                      viewBox="0 0 20 20"
                      fill="currentColor"
                      aria-hidden="true"
                    >
                      <path
                        fill-rule="evenodd"
                        d="M5.22 8.22a.75.75 0 0 1 1.06 0L10 11.94l3.72-3.72a.75.75 0 1 1 1.06 1.06l-4.25 4.25a.75.75 0 0 1-1.06 0L5.22 9.28a.75.75 0 0 1 0-1.06Z"
                        clip-rule="evenodd"
                      />
                    </svg>
                  </button>
                  <div class="mt-2 space-y-1 hidden pl-4" id={`submenu-${idx}`}>
                    {item.children.map((child) => {
                      const isActive = currentPath === child.href;
                      return (
                        <a
                          href={child.href}
                          class={`block rounded-lg px-4 py-2 text-sm font-medium transition-colors ${
                            isActive
                              ? "text-blue-600 bg-blue-50 font-bold"
                              : "text-gray-700 hover:text-blue-600 hover:bg-blue-50"
                          }`}
                        >
                          {child.icon && <i class={child.icon + " mr-2"} />}
                          {child.name}
                        </a>
                      );
                    })}
                  </div>
                </div>
              ) : (
                <a
                  href={item.href}
                  class={`block rounded-lg px-4 py-3 text-base font-semibold transition-colors ${
                    currentPath === item.href
                      ? "text-blue-600 bg-blue-50 font-bold"
                      : "text-gray-900 hover:bg-gray-100"
                  }`}
                >
                  {item.icon && <i class={item.icon + " mr-2"} />}
                  {item.name}
                </a>
              );
            })
          }
        </div>

        <!-- Login Button -->
        <div class="mt-6 pt-6 border-t border-gray-200">
          <a
            href={appConfig.urls.login}
            class="flex items-center justify-center gap-2 w-full rounded-lg px-4 py-3 text-base font-semibold text-white bg-gradient-to-r from-blue-600 to-blue-700 hover:from-blue-700 hover:to-blue-800 shadow-md hover:shadow-lg transition-all duration-200"
          >
            Log in
            <svg
              class="h-4 w-4"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </div>
</div>

<script is:inline>
  document.addEventListener("DOMContentLoaded", () => {
    const menu = document.getElementById("mobile-menu");
    const openBtn = document.getElementById("mobile-menu-open");
    const closeBtn = document.getElementById("mobile-menu-close");
    const backdrop = document.getElementById("mobile-menu-backdrop");

    // Open menu
    if (openBtn && menu) {
      openBtn.addEventListener("click", () => {
        menu.classList.remove("hidden");
        document.body.style.overflow = "hidden";
      });
    }

    // Close menu
    const closeMenu = () => {
      if (menu) {
        menu.classList.add("hidden");
        document.body.style.overflow = "";
      }
    };

    if (closeBtn) {
      closeBtn.addEventListener("click", closeMenu);
    }

    if (backdrop) {
      backdrop.addEventListener("click", closeMenu);
    }

    // Toggle helper function
    const toggleSubmenu = (button, submenuId) => {
      const submenu = document.getElementById(submenuId);
      if (!button || !submenu) return;

      button.addEventListener("click", (e) => {
        e.preventDefault();
        e.stopPropagation();

        const expanded = button.getAttribute("aria-expanded") === "true";
        button.setAttribute("aria-expanded", !expanded);
        submenu.classList.toggle("hidden");

        const arrow = button.querySelector("svg");
        if (arrow) {
          arrow.classList.toggle("rotate-180");
        }
      });
    };

    // Main Products toggle
    const productsToggle = document.getElementById("mobile-products-toggle");
    if (productsToggle) {
      toggleSubmenu(productsToggle, "mobile-products-submenu");
    }

    // Category toggles
    document.querySelectorAll("[data-category-toggle]").forEach((button) => {
      const idx = button.getAttribute("data-category-toggle");
      toggleSubmenu(button, `mobile-category-${idx}`);
    });

    // Other submenu toggles
    document.querySelectorAll("[data-submenu-toggle]").forEach((button) => {
      const idx = button.getAttribute("data-submenu-toggle");
      toggleSubmenu(button, `submenu-${idx}`);
    });

    // Close menu when clicking on links
    menu?.querySelectorAll("a").forEach((link) => {
      link.addEventListener("click", () => {
        closeMenu();
      });
    });
  });
</script>
