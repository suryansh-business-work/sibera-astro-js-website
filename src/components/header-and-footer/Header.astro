---
import { menuData } from "./data/menu-data";
import MobileHeader from "./MobileHeader.astro";
import MegaMenu from "./MegaMenu.astro";
import TopBar from "./TopBar.astro";
import ProductSubHeader from "./ProductSubHeader.astro";

interface Props {
  productHeader?: {
    name: string;
    themeColor: string;
  };
}

const { productHeader } = Astro.props;
---

<header class="bg-white relative z-50 shadow-sm">
  <!-- 1. Top Bar -->
  <TopBar />

  <!-- 2. Main Header -->
  <nav
    class="mx-auto flex max-w-7xl items-center justify-between px-6 py-4 lg:px-8 relative"
    aria-label="Global"
  >
    <!-- Logo Section -->
    <div class="flex lg:flex-1">
      <a
        href="/"
        class="flex items-center gap-3 transition-opacity hover:opacity-80"
      >
        <span class="sr-only">Sibera</span>
        <img
          src="https://ik.imagekit.io/esdata1/sibera/logo/logo-only.svg"
          alt="Sibera Logo"
          class="h-12 w-auto"
        />
        <div class="flex flex-col justify-center">
          <span
            class="text-2xl font-bold text-gray-900 leading-none tracking-tight"
          >
            Sibera
          </span>
          <span
            class="text-[10px] font-semibold text-gray-500 leading-none uppercase tracking-widest mt-0.5"
          >
            by Exyconn
          </span>
        </div>
      </a>
    </div>

    <!-- Mobile Menu Button -->
    <div class="flex lg:hidden">
      <button
        type="button"
        class="-m-2.5 inline-flex items-center justify-center rounded-md p-2.5 text-gray-700 hover:bg-gray-100 transition-colors"
        id="mobile-menu-open"
        aria-label="Open main menu"
      >
        <span class="sr-only">Open main menu</span>
        <svg
          class="h-6 w-6"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="2"
          stroke="currentColor"
          aria-hidden="true"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"></path>
        </svg>
      </button>
    </div>

    <!-- Desktop Navigation -->
    <div class="hidden lg:flex lg:gap-x-1 lg:items-center">
      {
        menuData.map((item, idx) => {
          if (item.name === "Products") {
            return (
              <div class="group">
                <button
                  type="button"
                  class="flex items-center gap-x-1.5 px-4 py-2 text-sm font-semibold text-gray-700 hover:text-blue-600 hover:bg-blue-50 rounded-lg outline-none transition-all duration-200"
                  aria-expanded="false"
                  aria-haspopup="dialog"
                  aria-label="Browse all products"
                >
                  {item.name}
                  <svg
                    class="h-5 w-5 text-gray-400 group-hover:text-blue-600 transition-all duration-200 group-hover:rotate-180"
                    viewBox="0 0 20 20"
                    fill="currentColor"
                    aria-hidden="true"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M5.23 7.21a.75.75 0 011.06.02L10 11.168l3.71-3.938a.75.75 0 111.08 1.04l-4.25 4.5a.75.75 0 01-1.08 0l-4.25-4.5a.75.75 0 01.02-1.06z"
                      clip-rule="evenodd"
                    />
                  </svg>
                </button>
                <MegaMenu hasProductHeader={!!productHeader} />
              </div>
            );
          }

          return item.children ? (
            <div class="relative group">
              <button
                type="button"
                class="flex items-center gap-x-1.5 px-4 py-2 text-sm font-semibold text-gray-700 hover:text-blue-600 hover:bg-blue-50 rounded-lg outline-none transition-all duration-200"
                aria-expanded="false"
              >
                {item.name}
                <svg
                  class="h-5 w-5 text-gray-400 group-hover:text-blue-600 transition-all duration-200 group-hover:rotate-180"
                  viewBox="0 0 20 20"
                  fill="currentColor"
                  aria-hidden="true"
                >
                  <path
                    fill-rule="evenodd"
                    d="M5.23 7.21a.75.75 0 011.06.02L10 11.168l3.71-3.938a.75.75 0 111.08 1.04l-4.25 4.5a.75.75 0 01-1.08 0l-4.25-4.5a.75.75 0 01.02-1.06z"
                    clip-rule="evenodd"
                  />
                </svg>
              </button>
              <div class="absolute -left-8 top-full z-10 mt-3 max-w-md overflow-hidden rounded-2xl bg-white shadow-xl ring-1 ring-gray-900/5 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200">
                <div class="p-4">
                  {item.children.map((child) => (
                    <div class="group/item relative flex items-center gap-x-6 rounded-lg p-3 text-sm leading-6 hover:bg-gray-50 transition-colors">
                      <div class="flex-auto">
                        <a
                          href={child.href}
                          class="block font-semibold text-gray-900 hover:text-blue-600 transition-colors"
                        >
                          {child.name}
                          <span class="absolute inset-0" />
                        </a>
                      </div>
                    </div>
                  ))}
                </div>
              </div>
            </div>
          ) : (
            <a
              href={item.href}
              class="px-4 py-2 text-sm font-semibold text-gray-700 hover:text-blue-600 hover:bg-blue-50 rounded-lg transition-all duration-200"
            >
              {item.name}
            </a>
          );
        })
      }
    </div>

    <!-- Login Button -->
    <div class="hidden lg:flex lg:flex-1 lg:justify-end">
      <a
        href="/login"
        class="inline-flex items-center gap-2 px-5 py-2.5 text-sm font-semibold text-white bg-gradient-to-r from-blue-600 to-blue-700 hover:from-blue-700 hover:to-blue-800 rounded-lg shadow-md hover:shadow-lg transition-all duration-200"
      >
        Log in
        <svg
          class="h-4 w-4"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
        </svg>
      </a>
    </div>
  </nav>

  <!-- 3. Product Sub-Header (Conditional) -->
  {
    productHeader && (
      <ProductSubHeader
        productName={productHeader.name}
        themeColor={productHeader.themeColor}
      />
    )
  }

  <MobileHeader />
</header>
